<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.jinke.peasantcloud.activity.ConversationActivity" >
    
    <RelativeLayout 
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="#4BA42F">
	    <RelativeLayout 
	        android:id="@+id/back_btn_conversation"
	        android:layout_height="50dp"
	        android:layout_width="50dp">
	        <ImageView 
	        
	        android:layout_height="20dp"
	        android:layout_width="10dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:src="@drawable/back_btn"/>
	    </RelativeLayout>
	    <TextView 
	        android:id="@+id/chat_title"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="聊天标题"
	        android:textSize="22sp"
	        android:textColor="#fff"/>
	    <ImageView 
	        android:id="@+id/UserOrGroupInfo"
	        android:layout_height="25dp"
	        android:layout_width="25dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="20dp"
	        android:src="@drawable/chat_right_info"/>   
	</RelativeLayout>
    
    
  	<fragment
        android:id="@+id/conversation_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="io.rong.imkit.fragment.ConversationFragment"/> 
     
 
         
       
 
</LinearLayout>
