<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#f5f4f9"
    android:orientation="vertical" >
    
    	
    	 	<RelativeLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="60dp"
   	    android:background="#fff"
   	     android:id="@+id/ll_friend_chatlist"
   	     
   	     >
	    
	 
	       <io.rong.imkit.widget.AsyncImageView
	        
            android:id="@+id/recommend_list_headimg"
            android:layout_width="48dp"
            android:layout_height="48dp"
             android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:RCCornerRadius="3dp"
            app:RCDefDrawable="@drawable/header"
            app:RCShape="square" />
	       
	      
	     
	     <LinearLayout 
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:layout_centerVertical="true"
	         android:layout_toRightOf="@id/recommend_list_headimg"
	         android:layout_marginLeft="20dp"
	      
	        
	         android:orientation="vertical"
	         >
	         <TextView 
	         android:id="@+id/recommend_list_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="花生病虫害交流"
	        android:textSize="15sp"
	        android:singleLine="true"
			android:ellipsize="end"
	        android:layout_marginTop="10dp"
	        android:textColor="#000"
	        />
	         <TextView 
	         
	        android:id="@+id/recommend_list_intro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="群的介绍.....群的介绍.....群的介绍.....群的介绍....."
	        android:textSize="11sp"
	        android:layout_marginTop="3dp"
	        android:singleLine="true"
			android:ellipsize="end"
			android:maxLength="20"
	        android:layout_centerVertical="true"
	        android:textColor="#5000"
	        />
	     </LinearLayout>
	     
	      <Button  
	        android:id="@+id/add_or_apply"
	        android:background="@drawable/button_circle"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	       	android:layout_marginRight="15dp"	
	       	android:textColor="#FFF"
	       	android:layout_alignParentRight="true"
	       	android:text="申请加入"
	       	android:padding="7dp"/>
	    
	    
   	    
   	</RelativeLayout>
    

</LinearLayout>
