<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView 
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/ym"/>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水果型甜玉米无公害种植技术"
                android:textSize="15sp"
                android:textColor="#696969"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="种植大户老李"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#A9A9A9"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1330人看过"	               
                android:drawableLeft="@drawable/index_video_play"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:textColor="#D3D3D3"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView 
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:src="@drawable/index_comment"/>            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="24"
	                android:textSize="14sp"
	                android:textColor="#D3D3D3"/>
	            <ImageView 
                    android:layout_height="15dp"
                    android:layout_width="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/index_date"/>  
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:text="2016-07-30"
	                android:textSize="14sp"
	                android:textColor="#D3D3D3"/>
            </LinearLayout>            
        </LinearLayout>       
    </LinearLayout>
     <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#F5F5F5"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerInParent="true">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即播放" 
                    android:textColor="#696969"
                    android:textSize="16sp"/>
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/index_video_play_btn"/>
            </LinearLayout>
        </RelativeLayout>
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="8dp"
	        android:background="#F5F5F5"/>
    

</LinearLayout>
