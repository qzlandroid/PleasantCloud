<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"/>
    
    <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="75dp"
        
         android:background="#ffffff">
      <TextView
          android:id="@+id/todo_name" 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="10dp"
          android:text="给老王家虾池检测"
          android:textColor="#696969"
          android:textSize="20sp"/>
      
      <ImageView 
          android:id="@+id/location_icon"
          android:layout_height="16dp"
          android:layout_width="16dp" 
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="15dp"  
          android:layout_below="@id/todo_name"        
          android:src="@drawable/work_location"/>
      
     
      <TextView 
          android:id="@+id/work_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/todo_name"
          android:layout_marginTop="7dp"
          android:layout_toRightOf="@id/location_icon"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="10dp"
          android:text="南京市江宁区弘景大道99号"
          android:textColor="#A9A9A9"
          android:textSize="16sp"/>
      <TextView 
          android:id="@+id/work_todo"
          android:layout_width="60dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="20dp"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:padding="3dp"
          android:text="去完成"
          android:textColor="#4a90e2"
          android:background="@drawable/work_btn_bg"
          android:textSize="14sp"/>
  	</RelativeLayout>
	
</LinearLayout>